        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherHusbandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherPost.PostName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsFemale)
                    </td>*@
                <td>
                   @{ 
                       if(item.IsProjectTeacher==true)
                       { <text>Yes</text>}
                       else { <text>No</text>}
                   }
                </td>
                <td>
                    @{
                        if (item.ContractAward == true)
                        { <text>Yes</text>}
                    else
                    { <text>No</text>}
                    }
                   
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ContractUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfJoining)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.EcePreScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EcePostScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstPreScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstPostScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HTPreScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HTPostScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.School.SName)
                    </td>*@

                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeacherID">Update</a> 
                    @*<a asp-action="Details" asp-route-id="@item.TeacherID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TeacherID">Delete</a>*@
                </td>
            </tr>
        }
